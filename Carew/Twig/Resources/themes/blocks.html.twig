{% block document_url %}
{% spaceless %}
{{ relativeRoot }}/{{ document.path }}
{% endspaceless %}
{% endblock %}

{% block document %}
{% spaceless %}
{{ document.title }}
{% endspaceless %}
{% endblock %}

{% block document_title %}
{% spaceless %}
{{ document.title }}
{% endspaceless %}
{% endblock %}

{% block document_description %}
{% spaceless %}
{{ document.description }}
{% endspaceless %}
{% endblock %}

{% block document_toc %}
{% spaceless %}
{% endspaceless %}
{% endblock %}

{% block documents %}
{% spaceless %}
    <ul class="{{ block('ul_class') }}">
        {% for document in documents %}
            <li>
                <a href="{{ render_document_url(document) }}">
                    {{ render_document(document) }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endspaceless %}
{% endblock %}

